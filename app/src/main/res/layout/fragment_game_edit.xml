<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_def"
    tools:context=".ui.Game.GameEditFragment">


    <TextView
        android:id="@+id/plataforma"
        android:layout_width="91dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="47dp"
        android:text="Plataforma"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/estado"
        app:layout_constraintEnd_toStartOf="@+id/spinPlataforma"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/formato"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="364dp"
        android:text="Formato"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinFormato"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="67dp"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/plataforma"
        app:layout_constraintEnd_toStartOf="@+id/spinNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/estado"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="60dp"
        android:text="Estado"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/formato"
        app:layout_constraintEnd_toStartOf="@+id/spinEstado"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinPlataforma"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/spinEstado"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinEstado"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/spinFormato"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinFormato"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="364dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/editGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinFormato"
        app:layout_constraintVertical_bias="0.123" />

    <Spinner
        android:id="@+id/spinNombre"
        android:layout_width="231dp"
        android:layout_height="29dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="59dp"
        app:layout_constraintBottom_toTopOf="@+id/spinPlataforma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />


</androidx.constraintlayout.widget.ConstraintLayout>