<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_def"
    tools:context=".ui.Game.GameEditFragment">

    <TextView
        android:id="@+id/nombre"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="88dp"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/plataforma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/plataforma"
        android:layout_width="91dp"
        android:layout_height="36dp"
        android:text="Plataforma"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinPlataforma"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214" />

    <TextView
        android:id="@+id/estado"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:text="Estado"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/formato"
        app:layout_constraintEnd_toStartOf="@+id/spinEstado"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plataforma"
        app:layout_constraintVertical_bias="0.451" />

    <TextView
        android:id="@+id/formato"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="312dp"
        android:text="Formato"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinFormato"
        app:layout_constraintTop_toBottomOf="@+id/plataforma"
        app:layout_constraintVertical_bias="0.758" />

    <Spinner
        android:id="@+id/spinPlataforma"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinEstado"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="314dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinPlataforma"
        app:layout_constraintVertical_bias="0.285" />

    <Spinner
        android:id="@+id/spinFormato"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinEstado"
        app:layout_constraintVertical_bias="0.156" />


    <Button
        android:id="@+id/editGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="4dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinFormato"
        app:layout_constraintVertical_bias="0.045" />

    <Spinner
        android:id="@+id/spinNombre"
        android:layout_width="231dp"
        android:layout_height="29dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/spinPlataforma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@+id/nombre" />


</androidx.constraintlayout.widget.ConstraintLayout>