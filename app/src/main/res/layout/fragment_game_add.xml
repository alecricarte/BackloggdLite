<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_def"
    tools:context=".ui.Game.GameAddFragment">

    <TextView
        android:id="@+id/nombre"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginTop="52dp"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/editTextNombre"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plataforma"
        android:layout_width="90dp"
        android:layout_height="28dp"
        android:layout_marginTop="61dp"
        android:text="Plataforma"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/spinPlataforma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <TextView
        android:id="@+id/estado"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginTop="72dp"
        android:text="Estado"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/spinEstado"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plataforma" />

    <TextView
        android:id="@+id/formato"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginTop="60dp"
        android:text="Formato"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinFormato"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estado"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="243dp"
        android:layout_height="37dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="53dp"
        android:ems="10"
        android:hint="Escribe el nombre aquÃ­"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/spinPlataforma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spinPlataforma"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="152dp"
        app:layout_constraintBottom_toTopOf="@+id/addGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinFormato"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toTopOf="@+id/addGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinPlataforma" />

    <Spinner
        android:id="@+id/spinEstado"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toTopOf="@+id/spinFormato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinPlataforma"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="216dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>