<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_def"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="49dp"
        android:fontFamily="@font/concert_one"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/juegos_totales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/juegosCompletados"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/concert_one"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/juegosAplazados"
        android:layout_width="33dp"
        android:layout_height="18dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="28dp"

        android:fontFamily="@font/concert_one"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/juegosAbandonados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juegosPendientes"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/juegosPendientes"
        android:layout_width="37dp"
        android:layout_height="20dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/concert_one"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/juegosPlatinados"
        android:layout_width="36dp"
        android:layout_height="18dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/concert_one"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/juegosAbandonados" />

    <TextView
        android:id="@+id/juegos_totales"
        android:layout_width="32dp"
        android:layout_height="19dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/concert_one"
        android:text="Nivel 291"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/juegosPlatinados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/juegosAbandonados"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/concert_one"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/spinnerFiltro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juegosPendientes"
        app:layout_constraintVertical_bias="0.0" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="373dp"
        android:layout_height="362dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerFiltro"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_recycler_home" />

    <Spinner
        android:id="@+id/spinnerFiltro"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="461dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/concert_one"
        android:text="Juegos totales"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/juegosCompletados"
        app:layout_constraintEnd_toStartOf="@+id/juegos_totales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/concert_one"
        android:text="Juegos completados"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/juegosCompletados"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="49dp"
        android:fontFamily="@font/concert_one"
        android:text="Platinos"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerFiltro"
        app:layout_constraintEnd_toStartOf="@+id/juegosPlatinados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juegosCompletados" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="108dp"
        android:layout_height="22dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/concert_one"
        android:text="Juegos pendientes"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/juegosPendientes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/concert_one"
        android:text="Juegos aplazados"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/juegosAplazados"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/concert_one"
        android:text="Juegos abandonados"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerFiltro"
        app:layout_constraintEnd_toStartOf="@+id/juegosAbandonados" />
    <Button
        android:id="@+id/buttonFiltro"
        android:layout_width="95dp"
        android:layout_height="38dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="232dp"
        android:text="Filtrar"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerFiltro"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>